    }

    .song-list li {
      padding: 10px;
      background-color: #e0e0e0;
      margin: 5px;
      cursor: pointer;
    }

    .song-list li:hover {
      background-color: #d0d0d0;
    }

    .audio-player {
      display: flex;
      flex-direction: column;
      align-items: center;
